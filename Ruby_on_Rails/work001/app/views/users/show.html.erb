<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.image %>
    			<%= image_tag("/#{@user.image}", :size => "50x50") %>
  			<% else %>
    			<%= image_tag("sample001.png", :size => "50x50") %>
    		<% end %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>